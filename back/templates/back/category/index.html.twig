{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
   
        <a href="{{ path('back_category_new') }}" class="btn btn-outline-info">Créer une nouvelle catégorie</a>
        
    <table class="table table-hover">
        <thead>
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Sports</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                 <td>{% for sport in category.sports %} {{sport}} <br> {% endfor %}</td>
                <td>
                    <a href="{{ path('back_category_show', {'id': category.id}) }}" class="btn btn-outline-info">show</a> <br>
                    <a href="{{ path('back_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary">edit</a> <br>
                    {{ include('back/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
