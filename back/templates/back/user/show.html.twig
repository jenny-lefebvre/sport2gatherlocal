{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
   

     <table class="table table-hover">
        <tbody>
            <tr class="table-info">
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
             <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ user.picture }}" width="10%"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ user.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_user_index') }}" class="btn btn-outline-info">back to list</a>

    <a href="{{ path('back_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary">edit</a>

     {{ include('back/user/_delete_form.html.twig') }}  
{% endblock %}
