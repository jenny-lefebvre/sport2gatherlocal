{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}

    
        <a href="{{ path('back_comment_new') }}" class="btn btn-outline-info">Cr√©er un nouveau commentaire</a>

    <table class="table table-hover">
        <thead>
            <tr class="table-info">
                <th>Id</th>
                <th>Content</th>
                <th>Post Title</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.post }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i') : '' }}</td>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path('back_comment_show', {'id': comment.id}) }}" class="btn btn-outline-info">show</a><br>
                    <a href="{{ path('back_comment_edit', {'id': comment.id}) }}" class="btn btn-outline-primary" >edit</a><br>
                    {{ include('back/comment/_delete_form.html.twig') }} 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   {% endblock %}
