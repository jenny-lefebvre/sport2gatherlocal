{% extends 'base.html.twig' %}

{% block title %}Sport
{% endblock %}

{% block body %}

	
	<table class="table table-hover">
		<tbody>
			<tr class="table-info">
				<th>Id</th>
				<td>{{ sport.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ sport.name }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td><img src="{{ sport.picture }}" width="10%"></td>
			</tr>
			<tr>
				<th>Cat√©gorie(s) du sport</th>
				<td>
					{% for categories in sport.categories %}
						{{ categories.name }}{{ loop.last ? '' : ', ' }}
					{% else %}
						No category available
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('back_sport_index') }}" class="btn btn-outline-info">back to list</a>

	<a href="{{ path('back_sport_edit', {'id': sport.id}) }}" class="btn btn-outline-primary">edit</a>

	{{ include('back/sport/_delete_form.html.twig') }}
{% endblock %}
