{% extends 'base.html.twig' %}

{% block title %}Sport index
{% endblock %}

{% block body %}


	<a href="{{ path('back_sport_new') }}" class="btn btn-outline-info">Créer un nouveau sport</a>
	<table class="table table-hover">
		<thead>
			<tr class="table-info">

				<th>Id</th>
				<th>Name</th>
				<th>Slug</th>
				<th>Catégorie liée</th>
				<th>Picture</th>
				<th>Actions</th>

			</tr>
		</thead>
		<tbody>
			{% for sport in sports %}
				<tr>
	
					<td>{{ sport.id }}</td>
					<td>{{ sport.name }}</td>
					<td>{{ sport.slug }}</td>
					<td>
						{% for categories in sport.categories %}
							{{ categories.name }}{{ loop.last ? '' : ', ' }}
						{% else %}
							No category available
						{% endfor %}
					</td>
					<td id="image"><img src="{{ sport.picture }}" width="100%" ></td>
					<td>
						<a href="{{ path('back_sport_show', {'id': sport.id}) }}" class="btn btn-outline-info">show</a>
						<a href="{{ path('back_sport_edit', {'id': sport.id}) }}" class="btn btn-outline-primary">edit</a>
						{{ include('back/sport/_delete_form.html.twig') }} 
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
